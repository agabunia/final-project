<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Finalproject" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/blueish</item>
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--    bottom navigation style for light mode-->
    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents">
        <item name="android:navigationBarColor">@style/Widget.BottomNavigationView</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NavigationBackground">
        <item name="android:background">@drawable/bottom_navigation_shape_light</item>
    </style>


    <!--    light mode screen background color       -->
    <style name="screenBackground">
        <item name="android:background">@color/blueish</item>
    </style>

    <!--    light mode drawer screen background color       -->
    <style name="drawerScreenBackground">
        <item name="android:background">@color/blueish</item>
    </style>


</resources>