<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Finalproject" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/milky</item>
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--    bottom navigation style for light mode-->
    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents">
        <item name="android:navigationBarColor">@style/Widget.BottomNavigationView</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NavigationBackground">
        <item name="android:background">@drawable/bottom_navigation_shape_light</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_selector_light</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_selector_light</item>
    </style>


    <!--    light mode screen background color       -->
    <style name="screenBackground">
        <item name="android:background">@color/milky</item>
    </style>

    <!--    light mode drawer screen background color       -->
    <style name="drawerScreenBackground">
        <item name="android:background">@color/green_sheen</item>
    </style>
    
    <!--      light mode button color  -->
    <style name="MainImageButtonTheme" parent="Theme.AppCompat">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:background">@drawable/button_shape_light</item>
    </style>
    <style name="QuantityChangeButtonStyle">
        <item name="android:background">@drawable/button_oval_shape_light</item>
    </style>

    <!--    light mode product background color       -->
    <style name="ProductBackground">
        <item name="android:background">@drawable/item_shape_light</item>
    </style>

    <!--    light mode Horizontal line background color       -->
    <style name="LineBackground">
        <item name="android:background">@color/black</item>
    </style>


</resources>