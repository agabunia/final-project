<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_for_background"
    tools:context=".presentation.screen.profile.ProfileFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profileBackground"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:id="@+id/backg"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="@id/profileBackground"
        app:layout_constraintTop_toBottomOf="@+id/profileBackground"
        android:focusable="true" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editPencil"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@id/backg"
        app:layout_constraintTop_toTopOf="@+id/backg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Nintsa Kemularia"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileBackground" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="+995 589 78 54 25"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUsername" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@color/dart_gray_for_bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:text="@string/edit_profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/ic_profile"
        app:layout_constraintStart_toEndOf="@id/ic_profile"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_profile"
        app:layout_constraintBottom_toBottomOf="@id/txt_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        android:id="@+id/ic_next"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_address"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_location"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:text="@string/address"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/ic_address"
        app:layout_constraintStart_toEndOf="@id/ic_address"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_address"
        app:layout_constraintBottom_toBottomOf="@id/txt_address"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_wallet"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ic_address"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_wallet"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:text="@string/payment"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/ic_wallet"
        app:layout_constraintStart_toEndOf="@id/ic_wallet"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_wallet"
        app:layout_constraintBottom_toBottomOf="@id/txt_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_security"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_security"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ic_address"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_security"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:text="@string/security"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/ic_security"
        app:layout_constraintStart_toEndOf="@id/ic_security"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_security"
        app:layout_constraintBottom_toBottomOf="@id/txt_security"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_privacy"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_privacy_policy"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ic_address"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_privacy"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:text="@string/security"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/ic_privacy"
        app:layout_constraintStart_toEndOf="@id/ic_privacy"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_privacy"
        app:layout_constraintBottom_toBottomOf="@id/txt_privacy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>